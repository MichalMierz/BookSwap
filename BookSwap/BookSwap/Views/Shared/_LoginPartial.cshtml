@using Microsoft.AspNetCore.Identity
@using BookSwap.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark"
               asp-area="Identity" asp-page="/Account/Manage/Index"
               title="Zarządzaj swoim kontem">
                @User.Identity.Name
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm"
                  asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Page("/Index")"
                  method="post"
                  class="d-inline">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Wyloguj
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
                Zarejestruj
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                Zaloguj
            </a>
        </li>
    }
</ul>
