@model BookSwap.Models.Exchange

@{
    ViewData["Title"] = "Odpowiedz na propozycję wymiany";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <h4>Proponowana przez (@Model.Initiator.UserName)</h4>
        <dl class="row">
            <dt class="col-sm-4">Oferowana przez niego książka:</dt>
            <dd class="col-sm-8">@Model.OfferedBook.Title</dd>
            <dt class="col-sm-4">Stan:</dt>
            <dd class="col-sm-8">@Model.OfferedBook.Condition</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <h4>Twoja książka</h4>
        <dl class="row">
            <dt class="col-sm-4">Tytuł:</dt>
            <dd class="col-sm-8">@Model.RequestedBook.Title</dd>
            <dt class="col-sm-4">Stan:</dt>
            <dd class="col-sm-8">@Model.RequestedBook.Condition</dd>
        </dl>
    </div>
</div>

<form asp-action="Respond" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" name="action" value="accept" class="btn btn-success">Akceptuj</button>
    <button type="submit" name="action" value="reject" class="btn btn-danger ms-2">Odrzuć</button>
    <a asp-action="MyExchanges" class="btn btn-secondary ms-2">Powrót</a>
</form>
